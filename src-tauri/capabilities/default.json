{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Lumina Note",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "dialog:default",
    "shell:default",
    "shell:allow-open",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$APPDATA/**",
        "$DOCUMENT/**",
        "$DESKTOP/**",
        "**"
      ]
    }
  ]
}
